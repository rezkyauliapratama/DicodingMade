<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toast_elevation"
        android:layout_marginEnd="@dimen/toast_elevation"
        android:background="@drawable/bg_toast_white"
        android:elevation="@dimen/toast_elevation"
        android:orientation="horizontal"
        android:padding="@dimen/toast_padding">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/toast_padding"
            app:srcCompat="@drawable/ic_warning" />

    <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/toast_padding"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/toast_text_size"
            tools:text="Error message " />
</LinearLayout>