<resources>

    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_left</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--Toolbar-->
    <style name="AppToolbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextAppearance">@style/TextAppearance.ActionBar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.ActionBar.Title</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp_0</item>
        <item name="contentInsetEnd">16dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="TextAppearance.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/greyish_brown_4a4a4a</item>
        <item name="android:textSize">17sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TextView Style v2 -->
    <!-- Content text style -->
    <style name="ContentTextStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/greyish_brown_4a4a4a</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ContentTextStyle.HeaderList" parent="ContentTextStyle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/greyish</item>
        <item name="android:lineSpacingExtra">@dimen/sp_2</item>
    </style>

    <style name="ContentTextStyle.Large" parent="ContentTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!--tablayout-->
    <style name="TextTabAppearance" >
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Bottom sheet-->
    <style name="CommonBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

</resources>
